<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/purple_700"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            >
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/arroz"
                android:layout_column="0"
                android:layout_row="0"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/avena"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/tvArroz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="         ARROZ"
                android:layout_column="0"
                android:layout_row="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="                          AVENA"
                android:layout_column="1"
                android:layout_row="1" />


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true">
            <ImageButton

                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/lenteja"
                android:layout_column="0"
                android:layout_row="0"/>

            <ImageButton

                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/maiz"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="         LENTEJA"
                android:layout_column="0"
                android:layout_row="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="                       MAIZ"
                android:layout_column="1"
                android:layout_row="1" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/pan"
                android:layout_column="0"
                android:layout_row="0"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/pasta"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="         PAN"
                android:layout_column="0"
                android:layout_row="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="                       PASTA"
                android:layout_column="1"
                android:layout_row="1" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/quinoa"
                android:layout_column="0"
                android:layout_row="0"/>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/trigo"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="         QUINOA"
                android:layout_column="0"
                android:layout_row="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:scaleType="centerCrop"
                android:text="                       TRIGO"
                android:layout_column="1"
                android:layout_row="1" />

        </GridLayout>

        <Spinner
            android:id="@+id/listArroz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0" />


    </LinearLayout>


</LinearLayout>